<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<h1>Listagem de Cursos</h1>

<table  class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.status %></td>
        <td><%= link_to 'Visualizar', course %></td>
        <td><%= link_to 'Editar', edit_course_path(course) %></td>
        <td><%= link_to 'Remover', course, method: :delete, data: { confirm: 'Você tem certeza que deseja remover?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Criar Curso', new_course_path %>
<%= link_to 'Voltar', root_path %>
