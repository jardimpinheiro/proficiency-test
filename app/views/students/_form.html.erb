<%= form_for(@student) do |f| %>
  <% if @student.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@student.errors.count, "problema") %>:</h2>

      <ul>
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-6">

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :register_number %><br>
    <%= f.text_field :register_number, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :status %><br>
    <%= f.number_field :status, class: 'form-control' %>
  </div>
  </div></div>
  <div class="actions">
    <%= f.submit "Salvar", class: "btn btn-default" %>
  </div>
<% end %>
